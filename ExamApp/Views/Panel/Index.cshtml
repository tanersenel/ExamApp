@model IEnumerable<Exam>

    <div class="row">
        <a class="btn btn-primary" href="/Panel/Add">Add Exam</a>
    </div>
    <table class="table">
        <thead>
            <tr>
            <th>Exam</th>
               <th>Created Date</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
    
@foreach (var exam in Model)
{
    <tr id="examid-@exam.id">
        <td>@Html.Raw(exam.Title)</td>
        <td>@Html.Raw(exam.CreatedDate)</td>
        <td>
            <button class="btn btn-primary">Update</button>
            <button class="btn btn-danger" onclick="DeleteExam('@exam.id')">Delete</button>
            </td>
    </tr>
}
</tbody>
</table>
